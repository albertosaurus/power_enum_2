source 'https://rubygems.org'

# Runtime dependencies
gem 'railties', '= 5.2.6'
gem 'activerecord', '= 5.2.6'

# Gem under test
gem 'power_enum', :path => '../'

group :development do
  gem 'yard'
end

group :development, :test do
  gem 'bundler'
  gem 'rake'
  gem 'rspec', '~> 3.1'
  gem 'activejob', '= 5.2.6'

  platform :mri do
    gem 'sqlite3'
  end

  platform :jruby do
    gem 'activerecord-jdbcsqlite3-adapter'
  end

  gem 'awesome_print'
end

group :test do
  gem 'simplecov', :require => false
end
